---
import { colors } from "../../design-system/colors";
import Text from "../atoms/Text.astro";
import Button from "../atoms/Button.astro";
---

<div class="container">
  <div class="product-spotlight-area">
    <div class="product-spotlight-1">
      <div class="flex justify-center">
        <img class="product-spotlight-1-img" src="/assets/perfumes/chanel-no5.jpg" alt="Chanel No. 5" width="400" height="400" />
      </div>
      <div class="flex flex-col gap-4 items-center lg:items-start">
        <div class="w-[396px]">
          <Text
            className="text-center lg:text-left"
            type="h1"
            color={colors.white}
          >
            CHANEL NO. 5
          </Text>
        </div>
        <div class="w-[349px]">
          <Text
            className="text-center lg:text-left"
            type="body"
            color={colors.white}
          >
            El perfume más icónico del mundo. Una fragancia atemporal que combina elegancia y sofisticación para la mujer moderna.
          </Text>
        </div>
        <a href="https://fressia-perfumeria.kyte.site/es" target="_blank" rel="noopener"
          ><Button className="mt-8" type="secondary-inverted">
            VER CATÁLOGO
          </Button></a
        >
      </div>
    </div>
    <div class="product-spotlight-2">
      <div class="flex flex-col">
        <Text type="h3">BLACK OPIUM YSL</Text>
        <a href="https://fressia-perfumeria.kyte.site/es" target="_blank" rel="noopener"
          ><Button className="mt-7" type="secondary-inverted">
            VER CATÁLOGO
          </Button></a
        >
      </div>
    </div>
    <div class="product-spotlight-3">
      <div class="earphone-image"></div>
      <div class="flex flex-col">
        <Text type="h3">PERFUMES ÁRABES</Text>
        <a href="https://fressia-perfumeria.kyte.site/es" target="_blank" rel="noopener"
          ><Button className="mt-7" type="secondary">VER CATÁLOGO</Button></a
        >
      </div>
    </div>
  </div>
</div>

<style>
  .product-spotlight-area {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  .product-spotlight-1 {
    width: 100%;
    height: auto;
    border-radius: 8px;
    background: #d87d4a;
    display: block;
    overflow: hidden;
    padding: 64px 24px;
  }
  .product-spotlight-2 {
    width: 100%;
    height: 300px;
    border-radius: 8px;
    background: url("/assets/perfumes/black-opium.jpg");
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    padding: 34px 124px;
    grid-column: 1 / 3;
  }
  .product-spotlight-3 {
    width: 100%;

    border-radius: 8px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  .product-spotlight-3 div {
    width: 100%;
  }

  .product-spotlight-3 div:first-child,
  .product-spotlight-3 div:nth-child(2) {
    height: 300px;
  }
  .product-spotlight-3 div:first-child {
    background: url("/assets/perfumes/arabic-perfume.jpg");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    border-radius: 8px;
  }
  .product-spotlight-3 div:nth-child(2) {
    background: #f1f1f1;
    padding: 34px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-radius: 8px;
  }
  .product-spotlight-1-img {
    position: static;
    width: 172.248px;
    height: 207px;
    margin-bottom: 24px;
  }

  @media only screen and (min-width: 1024px) {
    .product-spotlight-area {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 32px;
      margin: 64px 0;
    }
    .product-spotlight-1 {
      height: 560px;
      display: flex;
      align-items: center;
      justify-content: space-evenly;
      overflow: hidden;
      grid-column: 1 / 3;
    }
    .product-spotlight-3 {
      height: 300px;
      display: flex;
      flex-direction: row;
      align-items: center;
      grid-column: 1 / 3;
      gap: 32px;
    }
    .product-spotlight-3 div:first-child,
    .product-spotlight-3 div:nth-child(2) {
      height: inherit;
    }
    .product-spotlight-1-img {
      position: relative;
      bottom: -35px;
      width: auto;
      height: auto;
      margin-bottom: 0;
    }
  }
</style>
