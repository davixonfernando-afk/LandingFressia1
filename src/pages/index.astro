---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/organisms/Hero.astro";
import { colors } from "../design-system/colors.js";
import Text from "../components/atoms/Text.astro";
import Button from "../components/atoms/Button.astro";
import FeaturedProducts from "../components/organisms/FeaturedProducts.astro";
import ProductSpotlight from "../components/organisms/ProductSpotlight.astro";
import Outro from "../components/organisms/Outro.astro";
import Footer from "../components/organisms/Footer.astro";
---

<Layout title="Inicio | Fressia Perfumería">
  <Hero>
    <div class="hero flex justify-center lg:justify-start pt-36">
      <div class="flex flex-col items-center lg:items-start gap-4">
        <Text type="body" color={colors.dimWhite}>NUEVA COLECCIÓN</Text>

        <div class="w-[396px]">
          <Text
            className="text-center lg:text-left"
            type="h1"
            color={colors.white}
          >
            Fressia Perfumería &amp; Accesorios
          </Text>
        </div>

        <div class="w-[349px]">
          <Text
            className="text-center lg:text-left"
            type="body"
            color={colors.white}
          >
            Fragancias que se sienten — precios que enamoran. Réplicas 1.1, perfumes por onzas y colecciones árabes.
          </Text>
        </div>

        <div class="mt-6 flex flex-col sm:flex-row gap-3">
          <!-- CTA principal: Catálogo Kyte -->
          <a href="https://fressia-perfumeria.kyte.site/es" target="_blank" rel="noopener">
            <Button className="mt-2 sm:mt-0" type="primary">VER CATÁLOGO</Button>
          </a>

          <!-- CTA secundario: WhatsApp -->
          <a href="https://wa.me/message/ES7WVJHY4MUYB1" target="_blank" rel="noopener">
            <Button className="mt-2 sm:mt-0" type="secondary">PEDIR POR WHATSAPP</Button>
          </a>
        </div>
      </div>
    </div>
  </Hero>

  <!-- Featured products -->
  <FeaturedProducts />

  <!-- product spotlight section -->
  <ProductSpotlight />

  <!-- Outro section -->
  <Outro />

  <!-- Footer -->
  <Footer />
</Layout>

